generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 String                   @id @default(uuid())
  email              String                   @unique
  passwordHash       String                   @map("password_hash")
  nickname           String
  profileImage       String?                  @map("profile_image")
  authProvider       String                   @default("email") @map("auth_provider")
  emailVerified      Boolean                  @default(false) @map("email_verified")
  isActive           Boolean                  @default(true) @map("is_active")
  createdAt          DateTime                 @default(now()) @map("created_at")
  updatedAt          DateTime                 @updatedAt @map("updated_at")
  lastLoginAt        DateTime?                @map("last_login_at")
  categories         Category[]
  emailVerifications EmailVerification[]
  lists              List[]
  notifications      Notification[]
  passwordResets     PasswordReset[]
  refreshTokens      RefreshToken[]
  reviews            Review[]
  userPlaces         UserPlace[]
  createdPlaces      PlaceModerationQueue[]   @relation("creator")
  reviewedPlaces     PlaceModerationQueue[]   @relation("reviewer")

  @@index([email])
  @@map("users")
}

model Place {
  id          String      @id @default(uuid())
  name        String
  address     String
  phone       String?
  latitude    Decimal
  longitude   Decimal
  category    String
  description String?
  externalUrl String?     @map("external_url")
  externalId  String?     @unique @map("external_id")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  reviews     Review[]
  userPlaces  UserPlace[]
  moderationQueue PlaceModerationQueue?

  @@index([category])
  @@index([externalId])
  @@index([latitude, longitude], name: "spatial_index")
  @@map("places")
}

model UserPlace {
  id             String      @id @default(uuid())
  userId         String      @map("user_id")
  placeId        String      @map("place_id")
  customName     String?     @map("custom_name")
  customCategory String?     @map("custom_category")
  labels         String      // JSON array stored as string
  note           String?
  visited        Boolean     @default(false)
  visitedAt      DateTime?   @map("visited_at")
  visitNote      String?     @map("visit_note")
  rating         Int?
  estimatedCost  Int?        @map("estimated_cost")
  photos         String      // JSON array stored as string
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  place          Place       @relation(fields: [placeId], references: [id], onDelete: Restrict)
  placeLists     PlaceList[]
  reviews        Review[]
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, placeId])
  @@index([userId])
  @@index([placeId])
  @@index([visited])
  @@index([customCategory])
  @@index([createdAt], name: "rate_limit_index")
  @@map("user_places")
}

model List {
  id          String      @id @default(uuid())
  userId      String      @map("user_id")
  name        String
  description String?
  iconType    String      @map("icon_type")
  iconValue   String      @map("icon_value")
  colorTheme  String?     @map("color_theme")
  isPublic    Boolean     @default(false) @map("is_public")
  sortOrder   Int         @default(0) @map("sort_order")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  placeLists  PlaceList[]

  @@index([userId])
  @@map("lists")
}

model PlaceList {
  id          String    @id @default(uuid())
  listId      String    @map("list_id")
  order       Int       @default(0)
  addedAt     DateTime  @default(now()) @map("added_at")
  userPlaceId String    @map("user_place_id")
  list        List      @relation(fields: [listId], references: [id], onDelete: Cascade)
  userPlace   UserPlace @relation(fields: [userPlaceId], references: [id], onDelete: Cascade)

  @@unique([userPlaceId, listId])
  @@index([userPlaceId])
  @@index([listId])
  @@map("place_lists")
}

model Category {
  id        String   @id @default(uuid())
  userId    String?  @map("user_id")
  name      String
  color     String
  icon      String?
  isCustom  Boolean  @default(true) @map("is_custom")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("categories")
}

model EmailVerification {
  id         String    @id @default(uuid())
  userId     String    @map("user_id")
  token      String    @unique
  expiresAt  DateTime  @map("expires_at")
  verifiedAt DateTime? @map("verified_at")
  createdAt  DateTime  @default(now()) @map("created_at")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("email_verifications")
}

model PasswordReset {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  token     String    @unique
  expiresAt DateTime  @map("expires_at")
  used      Boolean   @default(false)
  usedAt    DateTime? @map("used_at")
  ipAddress String?   @map("ip_address")
  userAgent String?   @map("user_agent")
  createdAt DateTime  @default(now()) @map("created_at")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("password_resets")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model LoginAttempt {
  id          String   @id @default(uuid())
  email       String
  ipAddress   String   @map("ip_address")
  userAgent   String?  @map("user_agent")
  success     Boolean  @default(false)
  attemptedAt DateTime @default(now()) @map("attempted_at")

  @@index([email])
  @@index([ipAddress])
  @@map("login_attempts")
}

model Review {
  id          String    @id @default(uuid())
  userPlaceId String    @map("user_place_id")
  userId      String    @map("user_id")
  placeId     String    @map("place_id")
  content     String
  rating      Int?
  photos      String    // JSON array stored as string
  isPublic    Boolean   @default(true) @map("is_public")
  likeCount   Int       @default(0) @map("like_count")
  reportCount Int       @default(0) @map("report_count")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  place       Place     @relation(fields: [placeId], references: [id], onDelete: Restrict)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userPlace   UserPlace @relation(fields: [userPlaceId], references: [id], onDelete: Cascade)

  @@index([placeId, isPublic])
  @@index([userId])
  @@index([userPlaceId])
  @@map("reviews")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String
  title     String
  message   String
  relatedId String?  @map("related_id")
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}

model PlaceModerationQueue {
  id          String    @id @default(uuid())
  placeId     String    @unique @map("place_id")
  userId      String    @map("user_id")
  status      String    @default("pending")
  reviewerId  String?   @map("reviewer_id")
  reviewedAt  DateTime? @map("reviewed_at")
  reviewNotes String?   @map("review_notes")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  place       Place     @relation(fields: [placeId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade, name: "creator")
  reviewer    User?     @relation(fields: [reviewerId], references: [id], onDelete: SetNull, name: "reviewer")

  @@index([status])
  @@index([createdAt])
  @@map("place_moderation_queue")
}
